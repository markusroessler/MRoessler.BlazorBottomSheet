{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch Sample.WebApp",
			"type": "process",
			"command": "dotnet",
			"args": [
				"watch",
				"--project", "${workspaceFolder}/Sample.WebApp",
				"--SampleApp:UseMinifiedJavaScripts=false"
			],
			"problemMatcher": "$msCompile",
			"runOptions": {"instanceLimit": 1},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"clear": true,
			}
		},
		
		{
			"label": "watch Sample.Wasm",
			"type": "process",
			"command": "dotnet",
			"args": [
				"watch",
				"--project", "${workspaceFolder}/Sample.Wasm",
				"--SampleApp:UseMinifiedJavaScripts=false"
			],
			"problemMatcher": "$msCompile",
			"runOptions": {"instanceLimit": 1},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"clear": true,
			}
		},

		{
			"label": "build Sample.WebApp",
			"type": "process",
			"command": "dotnet",
			"args": [
				"build",
				"${workspaceFolder}/Sample.WebApp/Sample.WebApp.csproj",
			],
			"problemMatcher": "$msCompile",
			"runOptions": {"instanceLimit": 1},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"clear": true,
			}
		}
	]
}