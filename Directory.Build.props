<Project>
    <PropertyGroup>
      <!-- see https://github.com/NuGet/NuGet.Client/blob/dev/src/NuGet.Core/NuGet.LibraryModel/LibraryIncludeFlagUtils.cs#L19 -->
      <DefaultPrivateAssets>contentfiles;analyzers;build</DefaultPrivateAssets>
      <TimetrackingTargetFramework>net10.0</TimetrackingTargetFramework>
    </PropertyGroup>

    <ItemGroup Condition="$(ProjectName.EndsWith('Playground')) == false">
      <PackageReference Include="MRoessler.DotnetAnalyzerConfig" PrivateAssets="all" />
    </ItemGroup>

    <ItemGroup Condition="$(ProjectName.EndsWith('Test'))">
      <PackageReference Include="MRoessler.DotnetAnalyzerConfig.Test" />
    </ItemGroup>
</Project>
  