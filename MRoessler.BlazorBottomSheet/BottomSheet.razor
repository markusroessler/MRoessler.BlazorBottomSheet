
<SectionContent SectionId="@((BottomSheetOutlet.ContentSectionName, _sectionContentId))">
    <div @ref="_rootElm" class="bottom-sheet-root">
        <!-- note: class attribute is handled by js code! -->
        <div class="bottom-sheet-layout" 
            data-allow-minimized-expansion=@AllowMaximizedState data-allow-normal-expansion=@AllowNormalState data-allow-maximized-expansion=@AllowMaximizedState
            data-visible=@IsVisible data-expansion=@((int)Expansion)
        >
            <div class="bottom-sheet-background" @onclick="SetClosedAsync" />
            @CreateSheetElement()
        </div>

        <div class="hidden-bottom-sheet-layout">
            <div class="bottom-sheet-background" />
            @CreateSheetElement()
        </div>
    </div>

</SectionContent>

@code {
    private RenderFragment CreateDefaultHandle() =>
        @<svg xmlns="http://www.w3.org/2000/svg" width="100%" height="4" viewBox="0 0 80 4" fill="none">
            <rect x="20" width="40" height="4" rx="2" fill="#C4C4C4"/>
        </svg>; 

    private RenderFragment CreateSheetElement() =>
        @<div class="bottom-sheet"> <!-- note: style attribute is handled by js code! -->
            <div class="bottom-sheet-handle">
                @Handle
            </div>
            <div class="bottom-sheet-body">
                @ChildContent
            </div>
        </div>;
}